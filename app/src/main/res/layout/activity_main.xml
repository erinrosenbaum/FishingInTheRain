<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.erinrosenbaum.fishingintherain.MainActivity">

    <Button
        android:id="@+id/goToMaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See The Map"
        android:layout_below="@+id/goToPlaces"
        android:layout_alignParentStart="true" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Status: "
    android:textSize="24sp"
    android:id="@+id/tvStatusLabel"
    android:textStyle="bold" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Not Connected"
    android:id="@+id/tvStatus"
    android:layout_alignParentTop="true"
    android:textSize="24sp"
    android:layout_toEndOf="@id/tvStatusLabel" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Display Name:"
    android:id="@+id/tvDispNameLabel"
    android:textStyle="bold"
    android:textSize="24sp"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/tvStatusLabel"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Email: "
    android:id="@+id/tvEmailLabel"
    android:textStyle="bold"
    android:textSize="24sp"
    android:layout_marginTop="25dp"
    android:layout_below="@+id/tvDispName"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tvDispName"
    android:textSize="24sp"
    android:layout_below="@+id/tvDispNameLabel"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tvEmail"
    android:textSize="24sp"
    android:layout_below="@+id/tvEmailLabel"
    android:layout_alignParentStart="true" />

<Button
    android:id="@+id/btnDisconnect"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Disconnect"
    android:layout_below="@+id/btnSignOut"
    android:layout_alignParentStart="true" />

<Button
    android:id="@+id/btnSignOut"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Sign Out"
    android:layout_below="@+id/btnSignIn"
    android:layout_alignParentStart="true" />

<com.google.android.gms.common.SignInButton
    android:id="@+id/btnSignIn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:layout_marginTop="18dp"
    android:layout_below="@+id/tvEmail"
    android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/goToPlaces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See My Places"
        android:layout_below="@+id/btnDisconnect"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/goToYouTube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goToMaps"
        android:text="YouTube App" />

</RelativeLayout>


